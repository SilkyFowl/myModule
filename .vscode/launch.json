  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    },
    {
      "name": ".NET Core Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "pwsh",
      "args": ["${workspaceFolder}\\Tasks.ps1", "Debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": true
    },
    {
      "name": ".NET Core Launch (Deep)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "pwsh",
      "args": ["${workspaceFolder}\\Tasks.ps1", "Debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": false
    }
  ]
}
